#!/usr/bin/env bash
# Example environment file for QNX SDP 8.0 cross-build.
#
# Usage:
#   source /path/to/qnxsdp-env.sh
#   source qnx/env/qnx800.env

# QNX SDP location examples
export QNX_HOST="/opt/qnx800/host/linux/x86_64"
export QNX_TARGET="/opt/qnx800/target/qnx8"

# Optional license settings
# export QNX_CONFIGURATION_EXCLUSIVE="/opt/qnx800/.qnx"
# export QNX_LICENSE="/opt/qnx800/license"

# Build defaults
export AUTOSAR_QNX_ARCH="aarch64le"   # aarch64le | x86_64
export AUTOSAR_QNX_JOBS="$(getconf _NPROCESSORS_ONLN 2>/dev/null || echo 4)"

# Output layout
export AUTOSAR_QNX_OUT_ROOT="${PWD}/out/qnx"
export AUTOSAR_QNX_3P_PREFIX="${AUTOSAR_QNX_OUT_ROOT}/install/third_party/${AUTOSAR_QNX_ARCH}"
export AUTOSAR_QNX_MW_PREFIX="${AUTOSAR_QNX_OUT_ROOT}/install/middleware/${AUTOSAR_QNX_ARCH}"
export AUTOSAR_QNX_PREFIX="${AUTOSAR_QNX_OUT_ROOT}/install/autosar_ap/${AUTOSAR_QNX_ARCH}"

# Optional host tools path if built via qnx/scripts/build_host_tools.sh
# export PATH="${AUTOSAR_QNX_OUT_ROOT}/host-tools/bin:${PATH}"
